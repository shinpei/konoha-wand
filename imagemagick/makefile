# Makefile for konoha package
# This makefile is generated by gen_pkgmake.k
# shinpei(c)2009

CC = gcc
CFLAGS = -Wall `Magick-config --cflags --cppflags` 
LDLIBS = -lkonoha `Magick-config --ldflags --libs`
library = imagemagick.so
.PHONY: all
all: $(library)

objs = imagemagick.o
imagemagick.o: imagemagick.c
	$(CC) $(CFLAGS) -o $@ -c $^
$(library): $(objs)
	$(CC) -shared -Wl -o $@ $^ $(LDLIBS)
.PHONY: clean
clean:
	$(RM) -rf $(objs) $(library)

.PHONY: konoha_install
konoha_install: $(library)
	mkdir -p .konoha/imagemagick
	cp $(library) .konoha/imagemagick
	cp imagemagick.k .konoha/imagemagick
